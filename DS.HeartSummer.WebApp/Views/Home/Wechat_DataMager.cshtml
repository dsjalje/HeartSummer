@using DS.HeartSummer.Model;

@{
    ViewBag.Title = "Wechat_DataMager";
    Layout = "~/Views/Shared/_HomeMaster.cshtml";
}
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="ibox float-e-margins">
        <div class="ibox-content">
            <div class="row">
                <div class="col-sm-5 m-b-xs">
                    <select class="input-sm form-control input-s-sm inline" disabled="disabled">
                        <option value="0">请选择</option>
                        <option value="1">选项1</option>
                        <option value="2">选项2</option>
                        <option value="3">选项3</option>
                    </select>
                </div>
                <div class="col-sm-4 m-b-xs">
                    @*<div data-toggle="buttons" class="btn-group">
                            <label class="btn btn-sm btn-white">
                                <input type="radio" id="option1" name="options">天
                            </label>
                            <label class="btn btn-sm btn-white active">
                                <input type="radio" id="option2" name="options">周
                            </label>
                            <label class="btn btn-sm btn-white">
                                <input type="radio" id="option3" name="options">月
                            </label>
                        </div>*@
                </div>
                <div class="col-sm-3">
                    <div class="input-group">
                        <input type="text" placeholder="请输入关键词" class="input-sm form-control"> <span class="input-group-btn">
                            <button type="button" class="btn btn-sm btn-primary" disabled="disabled">搜索</button>
                        </span>
                    </div>
                </div>
            </div>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>姓名</th>
                            <th>学号</th>
                            <th>成绩数</th>
                            <th>课表数</th>
                            <th>操作</th>
                        </tr>
                    </thead>
                    <tbody>

                        @{
                            List<StudentInfo> slis = ViewData["slist"] as List<StudentInfo>;
                        }
                        @{
                            if (slis != null)
                            {
                                foreach (StudentInfo s in slis)
                                {

                                    <tr>
                                        <td>@s.UserName</td>
                                        <td>@s.UserId</td>
                                        <td>@s.StudentGrades.Count()</td>
                                        <td>@s.StudentImageTable.Count()</td>
                                        <td>
                                            <a href="#"><i class="fa fa-check text-navy"></i></a>
                                        </td>
                                    </tr>
                                }
                            }
                        }


                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>