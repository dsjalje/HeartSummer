@{
    ViewBag.Title = "登录";
    Layout = "~/Views/Shared/_LoginMaster.cshtml";
}


<div class="middle-box text-center loginscreen  animated fadeInDown">
    <div>
        <div>
            <h1 class="logo-name">He</h1>
        </div>
        <h3>欢迎使用 </h3>

        @using (Ajax.BeginForm("login", "users", new AjaxOptions { OnSuccess = "success" }))
        {
            <div class="form-group">
                <input type="text" class="form-control" name="LoginId" placeholder="用户名" required="">
            </div>
            <div class="form-group">
                <input type="password" class="form-control" name="LoginPwd" placeholder="密码" required="">
            </div>
            <button type="submit" class="btn btn-primary block full-width m-b">登 录</button>
            <p class="text-muted text-center">

                <a href="#"><small>忘记密码了？</small></a> | <a href="register">注册一个新账号</a>
            </p>
        }
    </div>
</div>

@section script{
    <script>
        function success(e){
            if (e == "0") {
                window.location.href = "/";
            }
            else {
                alert(e);
            }
        }
    </script>
}